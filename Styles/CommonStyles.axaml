<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <!-- Стили для TextBlock -->
    <Style Selector="TextBlock.header">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <Style Selector="TextBlock.error">
        <Setter Property="Foreground" Value="#FF4444"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>

    <Style Selector="TextBlock.username">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
    </Style>

    <Style Selector="TextBlock.balance">
        <Setter Property="Opacity" Value="0.7"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style Selector="TextBlock.avatar-letter">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,2,0,0"/>
    </Style>

    <!-- Стили для Border -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="#1a1a1a"/>
        <Setter Property="BorderBrush" Value="#333333"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="0,5"/>
    </Style>

    <Style Selector="Border.user-card">
        <Setter Property="Padding" Value="10,5"/>
    </Style>

    <Style Selector="Border.user-avatar">
        <Setter Property="Background" Value="#2a2a2a"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="0,0,15,0"/>
    </Style>

    <!-- Стили для Button -->
    <Style Selector="Button.action">
        <Setter Property="Background" Value="#2a2a2a"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <Style Selector="Button.action:pointerover">
        <Setter Property="Background" Value="#333333"/>
    </Style>

    <Style Selector="Button.action:pressed">
        <Setter Property="Background" Value="#404040"/>
    </Style>

    <Style Selector="Button.icon">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>

    <Style Selector="Button.icon:pointerover">
        <Setter Property="Background" Value="#22FFFFFF"/>
        <Setter Property="Opacity" Value="1"/>
    </Style>

    <Style Selector="Button.icon:pressed">
        <Setter Property="Background" Value="#44FFFFFF"/>
    </Style>

    <!-- Стили для TextBox и ComboBox -->
    <Style Selector="TextBox.input">
        <Setter Property="Background" Value="#2a2a2a"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="Width" Value="200"/>
    </Style>

    <Style Selector="TextBox.input:focus">
        <Setter Property="Background" Value="#333333"/>
    </Style>

    <Style Selector="TextBox.input:pointerover">
        <Setter Property="Background" Value="#333333"/>
    </Style>

    <Style Selector="ComboBox.input">
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="Width" Value="200"/>
    </Style>

    <!-- Стили для контейнеров -->
    <Style Selector="StackPanel.user-info">
        <Setter Property="Spacing" Value="4"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style Selector="ItemsControl.user-list > StackPanel">
        <Setter Property="Spacing" Value="5"/>
    </Style>
</Styles>
