<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:NekitCoinsManager.ViewModels"
             xmlns:models="using:NekitCoinsManager.Models"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="NekitCoinsManager.Views.TransactionView"
             x:DataType="vm:TransactionViewModel">

    <Border Classes="card">
        <StackPanel Spacing="10">
            <!-- Заголовок -->
            <TextBlock Text="Перевод монет"
                      Classes="header"
                      HorizontalAlignment="Center"/>

            <!-- Форма перевода -->
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" 
                  ColumnDefinitions="Auto,*"
                  Margin="10">
                
                <!-- Отправитель -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                          Text="От:"
                          Classes="username"
                          VerticalAlignment="Center"/>
                <ComboBox Grid.Row="0" Grid.Column="1"
                         ItemsSource="{Binding Users}"
                         SelectedItem="{Binding NewTransaction.FromUser}"
                         DisplayMemberBinding="{Binding Username}"
                         Classes="input"
                         HorizontalAlignment="Stretch"/>

                <!-- Получатель -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                          Text="Кому:"
                          Classes="username"
                          VerticalAlignment="Center"/>
                <ComboBox Grid.Row="1" Grid.Column="1"
                         ItemsSource="{Binding Users}"
                         SelectedItem="{Binding NewTransaction.ToUser}"
                         DisplayMemberBinding="{Binding Username}"
                         Classes="input"
                         HorizontalAlignment="Stretch"/>

                <!-- Сумма -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                          Text="Сумма:"
                          Classes="username"
                          VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1"
                         Text="{Binding NewTransaction.Amount}"
                         Watermark="Введите сумму"
                         Classes="input"/>

                <!-- Кнопка перевода -->
                <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                        Content="Перевести"
                        Command="{Binding TransferCommand}"
                        Classes="action"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"/>
            </Grid>

            <!-- Сообщения об ошибках -->
            <TextBlock Text="{Binding ErrorMessage}"
                      Classes="error"
                      HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl> 